(defn dot-file [G file-name]
  (with-open [out (clojure.java.io/writer file-name)]
     (.write out "digraph G {\nnode[shape=circle];\n")
     (doseq [[k v] G]
        (.write out (format "\"%s\" -> \"%s\" [label=%s];\n" (first k) (second k) v)))
     (.write out "}\n")))
